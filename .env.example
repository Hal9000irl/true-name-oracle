# API Keys
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
QUANTUM_API_KEY=anu_quantum_random_api_key
OPENAI_API_KEY=optional_for_ai_features

# Flask Configuration  
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# Database
DATABASE_URL=sqlite:///data/truename.db

# Application Settings
PORT=5000
HOST=0.0.0.0
LOG_LEVEL=INFO

# Feature Flags
ENABLE_QUANTUM=true
ENABLE_CRYSTAL_PROGRAMMING=true
ENABLE_SAFETY_PROTOCOLS=true

# External Services
REDIS_URL=redis://localhost:6379
SENTRY_DSN=optional_error_tracking

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
SESSION_LIFETIME=3600
MAX_UPLOAD_SIZE=16777216

# Paths
UPLOAD_FOLDER=temp_uploads
DATA_FOLDER=data
LOG_FOLDER=logs